[[ $- != *i* ]] && return

export PATH="$HOME/.local/bin:$PATH"

alias grep="/usr/bin/grep --color=always"

alias head="/usr/bin/sed 11q"

export LESSHISTFILE="/dev/null"

export EDITOR=/usr/bin/nvim
export VISUAL=/usr/bin/nvim

alias vi="/usr/bin/nvim"

alias ls="/usr/bin/ls -X --group-directories-first --color=always"
alias la="/usr/bin/ls -AX --group-directories-first --color=always"
alias ll="/usr/bin/ls -lAhGX --group-directories-first --color=always"
alias lt="/usr/bin/ls -lAhGXR -I .git --group-directories-first --color=always"

alias mv="/usr/bin/mv -i"
alias cp="/usr/bin/cp -i"

alias du="/usr/bin/du -h"
alias df="/usr/bin/df -h"
alias free="/usr/bin/free -m"

alias neofetch="/usr/bin/echo && /usr/bin/neofetch"

RED='\[\033[01;31m\]'
GRN='\[\033[01;32m\]'
YLW='\[\033[01;33m\]'
BLU='\[\033[01;34m\]'
PUR='\[\033[01;35m\]'
CLR='\[\033[00m\]'

PGB="\$(git branch 2> /dev/null | sed -e \
    '/^[^*]/d' -e 's/* \(.*\)/ ${BLU}(${CLR}\1${BLU})/')"

PS1="${BLU}[${PUR}\u${RED}@${GRN}\h ${YLW}\W${BLU}]${PGB} ${RED}\$${CLR} "

YLW='\033[01;33m'
BLU='\033[01;34m'
CLR='\033[00m'

bind "set vi-ins-mode-string ${BLU}(${YLW}I${BLU}) ${CLR}"
bind "set vi-cmd-mode-string ${BLU}(${YLW}N${BLU}) ${CLR}"

bind "set completion-ignore-case on"
bind "set show-mode-in-prompt  on"

set -o vi

bind -m vi-command '"\C-k": previous-history'
bind -m vi-command '"\C-j": next-history'

bind -m vi-insert '"\C-k": previous-history'
bind -m vi-insert '"\C-j": next-history'

bind -m vi-insert '"\C-l": clear-screen'
